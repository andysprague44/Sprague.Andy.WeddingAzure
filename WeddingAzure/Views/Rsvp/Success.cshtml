@using WeddingAzure.Models
@model WeddingAzure.Models.RsvpFormData

@{
    ViewBag.Title = "#Lando2018 - RSVP";
}

<div class="row">
    <div class="col-xs-12"><h2>RSVP</h2></div>
</div>
<hr />
<div class="row">
    <span class="glyphicon glyphicon-heart"></span>
</div>
<hr />
<div class="row">
        @if (Model.AttendingWeddingCheckBox)
        {
            <p class="p-description p-justify">Response submitted! See you at the wedding @Html.DisplayText(Model.NameTextBoxData)! </p>
        }
        else
        {
            <p class="p-description p-justify">Response submitted! It's a shame to hear you can't make it @Html.DisplayText(Model.NameTextBoxData). If you change your mind re - submit the form.</p>
        }

    }
</div>

