@using WeddingAzure.Models
@model IEnumerable < WeddingAzure.Models.Accommodation>

@{
    ViewBag.Title = "#Lando2018 - Details";
}

<div class="row">
<div class="col-xs-12"><h2>Accomodation</h2></div>
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="col-xs-12"><h2>@Html.DisplayFor(modelItem => item.Name) </h2></div>
            <div class="col-xs-12"><p>@Html.DisplayFor(modelItem => item.Address)</p></div>
            <div class="col-xs-12">
                <p class="p-justify p-description">@Html.DisplayFor(modelItem => item.Description) </p>
            </div>
            <div class="col-xs-12"><a href="@Html.DisplayFor(modelItem => item.Link)"> Link to Website </a></div>
        </div>
        <hr/>
    }
</div>

<p>Use this area to provide additional information.</p>
