@using System.Linq
@using System.Web.DynamicData
@using WeddingAzure.Models
@model System.Collections.Generic.IEnumerable < WeddingAzure.Models.Accommodation>

@{
    ViewBag.Title = "#Lando2018 - Details";
}

<div class="row" id="accomodation">
    <div class="col-xs-12"><h2>Accomodation</h2></div>
    @foreach (var item in Model.Where(m => m.IsMainChoice))
    {
        <div class="row">
            <div class="col-xs-12"><h2>@Html.DisplayFor(modelItem => item.Name) </h2></div>
            <div class="col-xs-12"><p>@Html.DisplayFor(modelItem => item.Address)</p></div>
            <div class="col-xs-12"><p class="p-justify p-description">@Html.DisplayFor(modelItem => item.Description) </p></div>
            <div class="col-xs-12"><a href="@Html.DisplayFor(modelItem => item.Link)"> @Html.DisplayFor(modelItem => item.Name) Website </a></div>
        </div>
        <hr />
    }
    <div class="col-xs-12"><h2>Other Options</h2></div>
    @foreach (var item in Model.Where(m => !m.IsMainChoice))
    {
            <div class="col-xs-12 col-md-6">
                <div><h2>@Html.DisplayFor(modelItem => item.Name) </h2></div>
                <div><p>@Html.DisplayFor(modelItem => item.Address)</p></div>
                <div><p class="p-justify p-description">@Html.DisplayFor(modelItem => item.Description) </p></div>
                <div><a href="@Html.DisplayFor(modelItem => item.Link)"> @Html.DisplayFor(modelItem => item.Name) Website </a></div>
            </div>
    }
</div>
<hr />
<div class="row" id="venuemap">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
        <div style="position: relative; width: 100%; height: 0px; padding-bottom: 75%;">
            <iframe style="position: absolute; left: 0px; top: 0px; width: 100%; height: 100%" src="https://www.google.com/maps/d/embed?mid=1pdpEokbjsiwljVvZu0rTgDSWOamGpZA3"></iframe>
        </div>
    </div>
    <div class="col-xs-2"></div>
</div>