@using System.Linq
@using System.Web.DynamicData
@using WeddingAzure.Models
@model System.Collections.Generic.IEnumerable<WeddingAzure.Models.Accommodation>

@{
    ViewBag.Title = "#Lando2018 - Details";
}

<div class="row" id="accomodation">
    <div class="col-xs-12"><h2>Accomodation</h2></div>
    @foreach (var item in Model.Where(m => m.IsMainChoice))
    {
        <div class="row">
            <div class="col-xs-12"><h3>@Html.DisplayFor(modelItem => item.Name) </h3></div>
            <div class="col-xs-12"><p>@Html.DisplayFor(modelItem => item.Address)</p></div>
            <div class="col-xs-12"><p class="p-justify p-center-md-4">@Html.DisplayFor(modelItem => item.Description) </p></div>
            <div class="col-xs-12"><a href="@Html.DisplayFor(modelItem => item.Link)"> @Html.DisplayFor(modelItem => item.Name) Website </a></div>
        </div>
        <hr />
    }
    <div class="col-xs-12"><h2>Other Options</h2></div>
    @foreach (var item in Model.Where(m => !m.IsMainChoice))
    {
        <div class="col-xs-12 col-md-4">
            <div><h3>@Html.DisplayFor(modelItem => item.Name) </h3></div>
            <div><p>@Html.DisplayFor(modelItem => item.Address)</p></div>
            <div><p class="p-justify p-description">@Html.DisplayFor(modelItem => item.Description) </p></div>
            <div><a href="@Html.DisplayFor(modelItem => item.Link)"> @Html.DisplayFor(modelItem => item.Name) Website </a></div>
        </div>
    }
</div>
<hr />
<div class="row" id="sitters">
    <div class="col-xs-12"><h2>Baby Sitters</h2></div>
    <div class="col-xs-12 p-center"><p class="p-center">Those requiring baby sitters in the Surrey area:</p></div>
    <div class="col-xs-12">
        <a href="http://www.sitters.co.uk/baysitters-in-surrey.aspx">www.babysitters.co.uk</a>
    </div>
</div>
<hr />
<div class="row" id="sundayaccomodation">
    <div class="col-xs-12"><h2>Sunday accomodation</h2></div>
    <div class="col-xs-12 p-center"><p class="p-center">If you require accomodation after Pop in the Park on Sunday, please follow the link to 
        find some recommendations of hotels in the Godalming area:</p></div>
    <div class="col-xs-12">
        <a href="https://www.tripadvisor.com/SmartDeals-g635924-Godalming_Surrey_England-Hotel-Deals.html">TripAdvisor Godalming</a>
    </div>
</div>
<hr />


